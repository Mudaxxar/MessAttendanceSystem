@{
	Layout = "~/Views/Shared/_DreamLayout.cshtml";
}
<div class="page-wrapper">
	<div class="content">
		<div class="page-header">
			<div class="page-title">
				<h4>Role Management</h4>
				<h6>Add/Update Roles</h6>
			</div>
		</div>
		<!-- /add -->
		<partial name="_AddEditRoleForm" model="Model" />
		<div class="col-lg-12">
			<a class="btn btn-submit me-2" href="javascript:void(0);" id="submit" onclick="Save()">Submit</a>
			<a class="btn btn-cancel" href="@Url.Action("GetRoles", "Roles")" id="cancel" onclick="@Url.Action("GetRoles")">Cancel</a>
		</div>
		<!-- /add -->
	</div>
</div>


<script>
	function Save() {
		var isValid = true;
		if ($("#name").val() == "" || $("#name").val() == null) {
			toastr.error("Role is missing!");
			isValid = false;
		}

		if (isValid) {
			var RoleData = {
				Name: $("#name").val(),
				NormalizedName: $("#name").val().toUpperCase()
			};
			$.ajax({
				url: '@Url.Action("AddRole", "Roles")',
				type: "POST",
				data: RoleData,
				success: function (result, status) {
					if (status == "success") {

						if (result.isError === false) {
							toastr.success(result.description);
						}
						else {
							if (result.isError === true) {
								toastr.error(result.description);
							} else {
								toastr.error(result.description);
							}

						}
						Clear();
					}
				},
				error: function (result) {
					toastr.error(result.description);
				},
			});
		}
	}

	function Clear() {
		$("#name").val('');
	}
</script>
