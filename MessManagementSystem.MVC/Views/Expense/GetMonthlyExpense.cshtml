@using MessManagementSystem.Shared.Models.ResponseModels
@using static MessManagementSystem.Shared.Enums.Enums
@model PaginatedResponseModel<ExpenseResponseModel>
@{
	Layout = "~/Views/Shared/_DreamLayout.cshtml";
}
<style>
	div.dataTables_processing {
		background-color: #35b2c2
	}
</style>
<div class="page-wrapper">
	<div class="content">
		<div class="page-header">
			<div class="page-title">
				<h4>Expense List</h4>
				<h6>Manage your Expense</h6>
			</div>
			<div class="page-btn">
				<a class="btn btn-added" asp-action="AddMonthly" asp-controller="Expense"><img src="~/DreamTemplates/images/plus.svg" alt="img">Add New</a>
			</div>
		</div>
		<!-- /Expense list -->
		<div class="card">
			<div class="card-body">
				<div class="table-responsive">
					<table class="table" id="tblExpense">
						<thead>
							<tr>
								<th>Date</th>
								<th>Description</th>
								<th>Amount</th>
								<th>Status</th>
								<th>Action</th>

							</tr>
						</thead>
						<tbody>
							@if (Model != null)
							{
								foreach (var item in Model.Records)
								{
									<tr>
										<td> @Convert.ToDateTime(item.Date).ToString("MMMM, yyyy")</td>
										<td>@item.Description</td>
										<td>@item.Amount</td>
									
										<td>
								@if (item.Status == ClosingStatus.Open)
								{
												<button class="btn btn-primary">
								Open
								</button>
								}
								else if (item.Status == ClosingStatus.Close)
								{
												<button class="btn btn-secondary">
								Closed
								</button>
								}

								</td>
										<td>@item.Id</td>

									</tr>
								}
							}

						</tbody>
					</table>
				</div>
			</div>
		</div>
		<!-- /Expense list -->
	</div>
</div>


<script>


	$(document).ready(function () {
		var Datatable = null;

		$('#tblExpense').on('draw.dt', function () {
			$('[data-toggle="tooltip"]').tooltip();
		});
		Datatable = $('#tblExpense').DataTable({
			"deferLoading": @Model.TotalRecords,
			"sort": false,
			"processing": true,
			search: {
				return: true
			},
			"serverSide": true,
			"ajax": {
				"url": "@Url.Action("GetExpense")",
				"type": "POST",
				"datatype": "json"
			},

			columns: [

				{
					data: 'date',
					name: 'Date',
					autoWidth: true,
					render: function (data, type, row) {
						return moment(data).format("MMMM, yyyy");
					}
				},
				{ data: 'description', name: 'Description', autoWidth: true },
				{ data: 'amount', name: 'Amount', autoWidth: true },
				{ data: 'status', name: 'Status', autoWidth: true },

				{
					data: "id", name: "Action", autoWidth: true,
					render: function (data, type, row, meta) {

						let html = '';
						if (row.status === "Opened") {
							html += `<a href="/Expense/EditMonthlyExpense/${row.id}" onclick="Edit(${row.id})">
								<img src="../DreamTemplates/images/edit.svg" alt="Edit" />
							</a>`;
							html += `<a href="javascript:void(0);" onclick="Close(${row.id})">
							<img src="../DreamTemplates/images/icons/dash1 (1).svg" alt="Close" />
						</a>`;
						}

						return html;
					}
				}


			]


		});
		$('[data-toggle="tooltip"]').tooltip();

		$('#tblExpense_filter input').unbind();
		$('#tblExpense_filter input').bind('keyup', function (e) {
			if (e.keyCode == 13) {
				Datatable.search(this.value).draw();
			}
		});
	});


	function Close(Id) {

		Swal.fire({
			title: "Are you sure?",
			text: "You won't be able to revert this!",
			type: "warning",
			showCancelButton: !0,
			confirmButtonColor: "#3085d6",
			cancelButtonColor: "#d33",
			confirmButtonText: "Yes, Closed it!",
			confirmButtonClass: "btn btn-primary",
			cancelButtonClass: "btn btn-danger ml-1",
			buttonsStyling: !1,
		}).then(function (t) {
			t.value &&
				ConfirmClose(Id);
		});
	}
	function ConfirmClose(id) {

		$.ajax({
			url: '/Expense/MonthlyClosing/' + id,
			type: "POST",
			success: function (result, status) {

				if (status == "success") {
					Swal.fire({
						type: "success",
						title: "Closed!",
						text: "Expense has been closed.",
						confirmButtonClass: "btn btn-success",
					});
					toastr.success(result.description);

					window.location.reload();
				}
			},

			error: function (result) {

				toastr.error(result);
			},
		});

		return false;
	}

</script>
